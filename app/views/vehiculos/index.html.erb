<div class="container margin-container">
  <div class="row">
    <%= render 'filtros'  %>
<!-- temina col filtros -->

<!-- VEHICULOS -->
    <div class="col-xs-12 col-md-9">
      <div class="row">
      <% @vehiculos.each do |v| %>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
          <div class="product">
              <div class="row">
                <div class="image">
                <div class="col-xs-12 col-sm-12 col-md-12 ">
                      <%= image_tag v.foto_ppal.url(:medium) %>
                    </div>
                    </div>
              </div>
              <div class="row usuario">
                <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                  <div class="agencia">
                    <a href="" ><span class="glyphicon glyphicon-briefcase"></span>&nbsp;PENACCHIO</a>
                  </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 titulo">
                      <a href=""><%= v.titulo %></a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 precio">
                      <p><span class="glyphicon glyphicon-usd"></span><span><%= v.precio %></span></p>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 caracteristicas">
                  <hr>
                    <p><span class="glyphicon glyphicon-map-marker"></span><%= v.dpto_mendoza.nombre %>, Mza</p>
                    <p><span class="glyphicon glyphicon-calendar"></span><%= v.condicion %> | <%= v.anio %></p>
                    <p><span class="glyphicon glyphicon-dashboard"></span><%= v.combustible %></p>
                </div>
              </div>
          </div>
        </div>
      <% end %>
      </div>
      
    </div>
    <div class="clearfix"></div>
    <div class="col-xs-12 col-md-push-3 col-md-9 text-center">
      <div class="pagination">
        <ul class="pagination">
          <%= will_paginate @vehi %>
        </ul>
      </div>
    </div>
  </div>
</div>


<%= javascript_include_tag 'filtro', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap-slider', 'data-turbolinks-track' => true %>