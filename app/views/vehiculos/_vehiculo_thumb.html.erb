<% @vehiculos_principal.each do |v| %>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
          <div class="product">
              <div class="row">
                <div class="image">
                <div class="col-xs-12 col-sm-12 col-md-12 ">
                      <%= image_tag v.foto_ppal.url(:medium) %>
                    </div>
                    </div>
              </div>
              <div class="row usuario">
                <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                  <div class="agencia">
                    <a href="" ><h5>PENACCHIO</h5></a>
                  </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 titulo">
                      <a href="<%= vehiculo_path(v) %>"><%= v.titulo %><span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 precio">
                      <p><span class="glyphicon glyphicon-usd"></span><span><%= v.precio %></span></p>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 caracteristicas">
                  <hr>
                    <p><span class="glyphicon glyphicon-map-marker"></span><%= v.dpto_mendoza.nombre %>, Mza</p>
                    <p><span class="glyphicon glyphicon-calendar"></span><%= v.condicion %> | <%= v.anio %></p>
                    <p><span class="glyphicon glyphicon-dashboard"></span><%= v.combustible %></p>
                </div>
              </div>
              <!-- Determinar si es principal -->
              <% if v.principal %>
                <div class="principal text-center"><i class="fa fa-thumb-tack"></i></div>
              <% end %>
          </div>
        </div>
<% end %>
